<h1>Meine Index</h1>

<p>dfsfsfds</p>

<div class="wrapper" style="max-width: 640px; height: 480px; overflow: hidden;">
    <div class="user" style="width: 150px; float: left; background: lightgrey; height: 100%; overflow: hidden;">
        <div style="width: 100%; padding-right: 20px; overflow-y: scroll;">
            <button 
                id="btn-chat-all"
                style="background: none; border: none; height: 37px; width: 100%; display: block;"
                data-id="0" data-fullname="All" data-new="0"
                onclick="userPressed(this); return false;"
                >All</button>
                <% for(let index = 0; index <users.length; ++index) { %>
                <%
                    if(self.req.user.id === user[index].id){
                        continue;
                    }
                %>
                <button
                    id="btn-chat-<%=users[index].id%>"
                    style="background: none; border: none; height: 37px; width: 100%; display: block;"
                    data-id="<%=users[index].id%>" data-fullname="<%users[index].fullname()%>" data-now="0"
                    onclick="userPressed(this); return false;"
                ><%=users[index].fullname()%></button>
                <% } %>
        </div>
    </div>
    <div class="chat" style="width: calc(100% -160px); float: left; height: 100%;">
        <div class="messages-wrapper" style="height: calc(100% - 80px);">
            <div style="width: 100%; height: 100%; padding-right: 20px; overflow-y: scroll;" id="messages" data-action="<%self.urlFor('api/messages', 'index')%>">
            
            </div>
        </div>
        <div class="input-wrapper">
            <textarea id="message" style="display: block; height: 80px; width: calc(100% - 80px); float: left; box-sizing: border-box;"></textarea>
            <button style="height: 80px; width: 80; display: block; float: left;" id="send-message" onclick="sendPressed(this); return false;"></button>
        </div>
    </div>
</div>
